    </bean>
    <bean id="dbPriksa"
          class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        
        
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>
    
    
    
    <bean id="config" class="com.hilman.test.etiqa.sql_module.service.Config">
        <property name="signingKey" value="here_is_the_secret"/>
        <property name="page_list_adm_teacher" value="10" />
        <property name="page_list_adm_student" value="10"/>
        <property name="page_list_adm_class" value="10"/>
        
    </bean>
    
    <mvc:interceptors>
        
        <mvc:interceptor>
            
            <mvc:mapping path="/admin/**" />
            <bean  class="com.hilman.test.etiqa.rest.interceptor.BaseInterceptor">
                <property name="roleNeeded" value="admin"/>
            </bean>
        </mvc:interceptor>
        <mvc:interceptor>
            
            <mvc:mapping path="/student/**" />
            <bean  class="com.hilman.test.etiqa.rest.interceptor.BaseInterceptor">
                <property name="roleNeeded" value="student"/>
            </bean>
        </mvc:interceptor>
        <mvc:interceptor>
            
            <mvc:mapping path="/teacher/**" />
            <bean  class="com.hilman.test.etiqa.rest.interceptor.BaseInterceptor">
                <property name="roleNeeded" value="teacher"/>
